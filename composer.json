{
    "name": "mapon/fuel-api-assignment",
    "description": "Fuel Transaction API - Take-Home Assignment",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6",
      "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/Rpc/Section/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "docker compose up -d",
        "test": "docker exec mapon-php vendor/bin/phpunit",
        "setup": "docker exec mapon-php php bin/setup.php"
    }
}
